<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.etumoov">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoetumoov"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoetumoov"
        android:supportsRtl="true"
        android:theme="@style/Theme.EtuMoov">
        <activity
            android:name=".MeteoClickerActivity"
            android:label="@string/title_activity_meteo_clicker"
            android:theme="@style/Theme.EtuMoov.NoActionBar"></activity>

        <receiver
            android:name=".AlarmBroadcastReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".AlarmService" />
    </application>

</manifest>