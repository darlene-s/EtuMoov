<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RÃ©veil.AlarmActivity">

    <Button
        android:id="@+id/btn_ajout_alarme_auto"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="35dp"
        android:background="#1F1376"
        android:onClick="setAutoAlarm"
        android:text="@string/label_Alarme"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_snooze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlarm" />

    <TextView
        android:id="@+id/textViewAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_aucune_alarm"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <Button
        android:id="@+id/btn_snooze"
        android:layout_width="129dp"
        android:layout_height="65dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="11dp"
        android:onClick="alarmSnooze"
        android:text="@string/btn_snooze"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ajout_alarme_auto" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="129dp"
        android:layout_height="65dp"
        android:onClick="startActivity"
        android:text="@string/btn_jouer"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_ajout_alarme_manuelle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_snooze" />

    <Button
        android:id="@+id/btn_cancel_alarm"
        android:layout_width="152dp"
        android:layout_height="66dp"
        android:onClick="cancelAlarm"
        android:text="STOP"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715"
        app:layout_editor_absoluteX="200dp"
        app:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/btn_ajout_alarme_manuelle"
        android:layout_width="152dp"
        android:layout_height="66dp"
        android:layout_marginTop="1dp"
        android:text="ALARME MANUELLE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancel_alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_play" />

    <RelativeLayout
          android:id="@+id/relativeLayout3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.0">

          <com.google.android.material.bottomnavigation.BottomNavigationView
              android:id="@+id/bottom_nav"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              app:itemBackground="@color/dark_blue"
              app:itemIconTint="@drawable/selector"
              app:itemTextColor="@drawable/selector"
              app:menu="@menu/menu_nav" />

          <!-- <ImageView
              android:id="@+id/imageView2"
              android:layout_width="346dp"
              android:layout_height="460dp"
              android:contentDescription="@string/label_img"
              app:srcCompat="@drawable/ic_accueilbas" />-->

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>