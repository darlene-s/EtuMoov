<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_ajout_alarme_auto"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:onClick="setAutoAlarm"
        android:text="@string/alarm_button"
        android:visibility="visible"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="141dp" />

    <Button
        android:id="@+id/btn_snooze"
        android:layout_width="129dp"
        android:layout_height="65dp"
        android:onClick="alarmSnooze"
        android:text="@string/snooze_button"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="367dp" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="129dp"
        android:layout_height="65dp"
        android:onClick="startActivity"
        android:text="@string/play_game"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="486dp" />

    <TextView
        android:id="@+id/textViewAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_alarm"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="267dp" />

</androidx.constraintlayout.widget.ConstraintLayout>